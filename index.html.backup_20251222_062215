        function toggleNav(){const e=document.getElementById("navMenu"),t=document.getElementById("navToggle");e.classList.toggle("active"),t.classList.toggle("active"),document.body.style.overflow=e.classList.contains("active")?"hidden":""}function closeNav(){const e=document.getElementById("navMenu"),t=document.getElementById("navToggle");e.classList.remove("active"),t.classList.remove("active"),document.body.style.overflow=""}document.querySelectorAll('a[href^="#"]').forEach(e=>{e.addEventListener("click",function(e){e.preventDefault();const t=this.getAttribute("href");if("#"===t)return void window.scrollTo({top:0,behavior:"smooth"});document.querySelector(t)?.scrollIntoView({behavior:"smooth"})})});
